<div id="page-content">
  <h1 class="text-center mt-4" style="margin: 30px;">Log-in to Alpha-Blog</h1>

  <div class="container">
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="form-group row field" style="margin: 10px;">
          <%= f.label :email, class: "col-2 col-form-label" %>
          <div class="col-9">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email"%>
          </div>
        </div>

        <div class="form-group row field" style="margin: 10px;">
          <%= f.label :password, class: "col-2 col-form-label" %>
          <div class="col-9">
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control", id: "inputPassword3", placeholder: "Password", type: "password"%>
          </div>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group row field">
            <div class="col-9"></div>
            <div class="col-2" style="display: flex; margin-left: 20px;">
              <%= f.check_box :remember_me, style: "margin-right: 5px;" %>
              <%= f.label :remember_me %>
            </div>
        <% end %>

        <div class="form-group row action" style="margin: 10px;">
          <div class="col-2"></div>
          <div class="col-9" style="display: flex;">
              <%= f.submit "Log in", class: "btn btn-outline-success btn-block col-5" %>
              <%= link_to "Cancel", :back, class: "btn btn-outline-danger col-5", style: "position: relative; right: -16.5%;" %>
          </div>
        </div>
      <% end %>

      <%# <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
