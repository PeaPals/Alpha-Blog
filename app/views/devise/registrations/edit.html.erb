<div id="page-content">
  <h1 class="text-center mt-4" style="margin: 30px;">Edit Account</h1>

  <div class="container">
    <%= render 'shared/errors', obj: resource %>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%# <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group row" style="margin: 10px;">
          <%= f.label :username, class: "col-2 col-form-label" %>
          <div class="col-9">
            <%= f.text_field :username, class: "form-control", placeholder: "Username"%>
          </div>
        </div>


        <div class="form-group row field" style="margin: 10px;">
          <%= f.label :email, class: "col-2 col-form-label" %>
          <div class="col-9">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email"%>
          </div>
        </div>

        <%# <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <%# <div>Currently waiting confirmation for: <%= resource.unconfirmed_email</div> %>
        <%# <% end %>

        <div class="form-group row field" style="margin: 10px;">
          <%= f.label :password, class: "col-2 col-form-label" %>
          <div class="col-9">
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control", id: "inputPassword3", placeholder: "New Password", type: "password"%>
            <% if @minimum_password_length %>
              <small class="form-text text-muted">
                  <%= @minimum_password_length %> characters minimum.<br>
                  <i>(leave blank if you don't want to change it)</i>
              </small>
            <% end %>
          </div>
        </div>

        <div class="form-group row field" style="margin: 10px;">
          <%= f.label :password_confirmation, class: "col-2 col-form-label" %>
          <div class="col-9">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", id: "inputPassword3", placeholder: "Re-enter Password", type: "password"%>
          </div>
        </div>

        <div class="form-group row field" style="margin: 10px;">
          <%= f.label :current_password, class: "col-2 col-form-label" %>
          <div class="col-9">
            <%= f.password_field :current_password, autocomplete: "new-password", class: "form-control", id: "inputPassword3", placeholder: "Current Password", type: "password"%>
            <% if @minimum_password_length %>
              <small class="form-text text-muted">
                  <%= @minimum_password_length %> characters minimum. <br>
                  <i>(we need your current password to confirm your changes)</i>
              </small>
            <% end %>
          </div>
        </div>

        <div class="form-group row action" style="margin: 10px;">
          <div class="col-2"></div>
          <div class="col-9" style="display: flex;">
              <%= f.submit "Update Account", class: "btn btn-outline-success btn-block col-5" %>
              <%= link_to "Cancel", :back, class: "btn btn-outline-danger col-5", style: "position: relative; right: -16.5%;" %>
          </div>
        </div>
      <% end %>

      <%# <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
