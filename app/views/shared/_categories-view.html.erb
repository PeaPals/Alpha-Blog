<div class="container">
  <% for i in 0..((@categories.length/columns)) do  %>
      <div class="row">
          <% for j in 0..(columns-1) do %>
              <% category = @categories[(i*columns)+j] %>
              <% if category %>
                  <div class="col-sm" style="margin: 16px;">
                      <div class="card shadow p-3 mb-5 bg-white rounded" style="width: 19rem; align-items: center;">
                          <%# TODO : <img class="card-img-top" src="..." alt="Card image cap"> %>
                          <div class="card-body">
                              <h5 class="card-title"><%= link_to category.name, category_path(category) %></h5>
                              <button class="btn btn-sm btn-dark disabled" style="margin: 10px; height: 30px; width: 165px;">Mentioned in <%=pluralize(category.articles.count, "Article")%></button>
                              <br>
                              <div class="card-footer text-muted" style="background-color: white;">
                                  <small>Created at : <%= time_ago_in_words(category.created_at) %> ago</small><br>
                                  <small>Updated at : <%= time_ago_in_words(category.updated_at) %> ago</small>
                              </div>
                          </div>
                      </div>
                  </div>
              <% end %>
          <% end %>
      </div>
  <% end %>
</div>
