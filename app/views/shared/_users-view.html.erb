<div class="container">
  <% for i in 0..((@users.length/columns)) do  %>
      <div class="row">
          <% for j in 0..(columns-1) do %>
              <% user = @users[(i*columns)+j] %>
              <% if user %>
                  <div class=<%="col-#{12/columns}"%>>
                      <div class="card shadow p-3 mb-5 bg-white rounded" style="width: 19rem; align-items: center;">
                          <div class="card-header text-muted" style="background-color: white;">

                            <% if user_signed_in? && current_user == user %>
                              <button class="btn btn-sm btn-info fw-bold">You</button>
                            <% end %>

                            <% if user_signed_in? && current_user != user %>
                              <% follow_back = Follow.find_by(following_user_id: user.id, followed_user_id: current_user.id) %>
                              <% if Follow.find_by(following_user_id: current_user.id, followed_user_id: user.id) %>
                                <%= link_to "#{'⇜' if follow_back}✓ Following", unfollow_user_path(user), method: :post, class: "btn btn-warning btn-sm fw-bold"%>
                              <% else %>
                                <%= link_to "#{'⇜' if follow_back}✛ Follow", follow_user_path(user), method: :post, class: "btn btn-warning btn-sm fw-bold"%>
                              <% end %>
                            <% end %>
                          </div>

                          <%= link_to user_path(user) do %>
                            <% gender = "male"; gender = "female" if (user.id%2) == 0 %>
                            <% asset_path = asset_url('user-logo.png') %>
                            <img src=<%="https://xsgames.co/randomusers/avatar.php?g=#{gender}&id=#{user.id}"%> onerror='this.src = "<%= asset_path %>";' alt="Profile Image" class="rounded-circle" width="150" style="margin-top: 15px;">
                          <% end %>

                          <div class="card-body">
                              <h5 class="card-title" style="text-align: center;"><b><%= user.username %></b></h5>

                              <div class="row" style="align-items: flex-end; margin-top: 2rem;">
                                <a href=<%= user_path(user) + '?show=articles' %> class="btn btn-md btn-light col-4" style="overflow-wrap: normal;"><b><%=pluralize(user.articles.count, "Article")%></b></a>
                                <a href=<%= user_path(user) + '?show=followers' %> class="btn btn-md btn-light col-4" style="overflow-wrap: normal;"><b><%=pluralize(user.followers.count, "Follower")%></b></a>
                                <a href=<%= user_path(user) + '?show=following' %> class="btn btn-md btn-light col-4" style="overflow-wrap: normal;"><b><%=user.followings.count%> Following</b></a>
                              </div>
                          </div>
                      </div>
                  </div>
              <% end %>
          <% end %>
      </div>
  <% end %>
</div>
