<div id="page-content">
    <h1 class="text-center mt-4"><%=@article.title%></h1>
    <div class="container">
        <div class="card text-center shadow p-3 mb-5 bg-white rounded">
            <div class="card-header">
                Created By : <%= link_to @article.user.username, user_path(@article.user), style: "text-decoration: none;" %> (<%= time_ago_in_words(@article.created_at) %> ago)
            </div>
            <div class="card-body">
                <%# <h5 class="card-title">Title</h5> %>
                <p class="card-text"><%=simple_format(@article.description)%></p>
                <br>

                <% if @article.categories.any? %>
                  <div class="mt-2"><%= render @article.categories %></div>
                <% end %>
                <br>

                <% if user_signed_in? && (current_user == @article.user || current_user.admin?) %>
                  <%=link_to 'Edit', edit_article_path(@article), class: "btn btn-outline-warning" %>
                  <%=link_to 'Delete', article_path(@article), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %>
                <% end %>
            </div>
            <div class="card-footer text-muted">
                Last Updated By : <%= link_to @article.user.username, user_path(@article.user), style: "text-decoration: none;" %> (<%= time_ago_in_words(@article.updated_at) %> ago)
            </div>
        </div>
        <%=link_to 'Return', articles_path, class: "btn btn-outline-primary btn-lg btn-block col-12" %>
    </div>
</div>
