<h1>Editing an existing new article</h1>

<% if @article.errors.any? %>
    <h3>following validation errors are present</h3>
    <% @article.errors.full_messages.each do |msg| %>
        <ul>
            <li><%=msg%></li>
        </ul>
    <% end %>
<% end %>


<%= form_with(model: @article, local: true) do |f| %>
    <p>
        <%= f.label :title %><br/>
        <%= f.text_field :title %>
    </p>

    <p>
        <%= f.label :description %><br/>
        <%= f.text_area :description %>
    </p>

    <p>
        <%= f.submit %>
    </p>
<% end %>

<%= link_to 'Cancel and go back to the articles listing', articles_path %>
