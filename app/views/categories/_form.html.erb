<div class="container">
  <%= render 'shared/errors', obj: @category %>

  <div class="card-body">
    <%= form_with(model: @category, local: true) do |f| %>


      <div class="form-group row" style="margin: 10px;">
        <%= f.label :name, "Category Name", class: "col-2 col-form-label" %>
        <div class="col-9">
          <%= f.text_field :name, class: "form-control", placeholder: "Category Name"%>
        </div>
      </div>


      <div class="form-group row" style="margin: 10px;">
            <div class="col-2"></div>
            <div class="col-9" style="display: flex;">
                <%= f.submit class: "btn btn-outline-success btn-block col-5" %>
                <%= link_to "Cancel", categories_path, class: "btn btn-outline-danger col-5", style: "position: relative; right: -16.5%;" %>
            </div>
        </div>


    <% end %>
  </div>
</div>
