<div class="container">
  <%= render 'shared/errors', obj: @user %>

  <div class="card-body">
    <%= form_with(model: @user, local: true) do |f| %>


      <div class="form-group row" style="margin: 10px;">
        <%= f.label :username, class: "col-2 col-form-label" %>
        <div class="col-9">
          <%= f.text_field :username, class: "form-control", placeholder: "Username"%>
        </div>
      </div>


      <div class="form-group row" style="margin: 10px;">
        <%= f.label :email, class: "col-2 col-form-label" %>
        <div class="col-9">
          <%= f.email_field :email, class: "form-control", id: "inputEmail3", placeholder: "Email", type: "email"%>
        </div>
      </div>


      <div class="form-group row" style="margin: 10px;">
        <%= f.label :password, class: "col-2 col-form-label" %>
        <div class="col-9">
          <%= f.password_field :password, class: "form-control", id: "inputPassword3", placeholder: "Password", type: "password"%>
        </div>
      </div>



      <div class="form-group row" style="margin: 10px;">
            <div class="col-2"></div>
            <div class="col-9" style="display: flex;">
                <%= f.submit(@user.new_record? ? "Sign-up" : "Update Account", class: "btn btn-outline-success btn-block col-5") %>
                <%= link_to "Cancel", root_path, class: "btn btn-outline-danger col-5", style: "position: relative; right: -16.5%;" %>
            </div>
        </div>


    <% end %>
  </div>
</div>
